@import "section/section-template.wxss";

.getuserinfo-btn {
  width: 100%;
  height: 400rpx;
  opacity: 0;
  position: absolute;
}

.userinfo {
  width: 750rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo__avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.userinfo__nickname {
  font-size: 16px;
  margin: 8px;
}
