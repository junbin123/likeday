.content-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content-box-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text01 {
  width: 270px;
  font-size: 16px;
  line-height: 30px;
}

.img01 {
  width: 270px;
  height: 133px;
  margin-top: 6px;
}

.text02 {
  font-size: 12px;
  color: #666;
  line-height: 30px;
}

.btn-box {
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #d8d8d8;
  z-index: 999;
}

.btn-copy {
  height: 44px;
  background: #455ac0;
  width: 686rpx;
  margin-top: 10px;
  border-radius: 4rpx;
  color: #fff;
  font-size: 16px;
  line-height: 44px;
}
