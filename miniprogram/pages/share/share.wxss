.share-img {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-box {
  width: 100%;
  height: 64px;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #d8d8d8;
  z-index: 999;
}

button::after {
  border: none;
}

.btn {
  height: 44px;
  margin-top: 10px;
  border-radius: 4rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-share {
  width: 338rpx;
  background: #455ac0;
  margin-left: 32rpx;
  color: #fff;
  border-radius: 4rpx;
}

.btn-edit {
  background: #d9d9d9;
  width: 158rpx;
  margin-left: 16rpx;
  border-radius: 4rpx;
  color: #455ac0;
}

.btn-delete {
  background: #d9d9d9;
  width: 158rpx;
  margin-left: 16rpx;
  border-radius: 4rpx;
  color: #f75454;
}

.btn text {
  font-size: 16px;
  font-weight: bold;
}
